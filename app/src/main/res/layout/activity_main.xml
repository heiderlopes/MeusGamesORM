<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appToolbar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/appToolbar"
        android:id="@+id/rvMeusGames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btNovoGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gamepad"
            fab:fab_size="mini"
            fab:fab_label="@string/label_novo_game"
            android:onClick="novoGame" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btNovoGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/puzzle"
            fab:fab_size="mini"
            fab:fab_label="@string/label_novo_genero"
            android:onClick="novoGenero"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btNovaPlataforma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/videogame"
            fab:fab_size="mini"
            fab:fab_label="@string/label_nova_plataforma"
            android:onClick="novaPlataforma"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>